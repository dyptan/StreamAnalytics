{
  "variables": {
    "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.2-server-amd64.iso"
    , "_iso_url": "http://releases.ubuntu.com/18.04/ubuntu-18.04.2-live-server-amd64.iso"
    , "iso_checksum": "34416ff83179728d54583bf3f18d42d2"
    , "_iso_checksum": "fcbcc756a1aa5314d52e882067c4ca6a"
    , "iso_checksum_type": "md5"
    , "output_name": "ubuntu-18-04"
  },
  "provisioners": [
    {"type": "file" , "source": "{{ template_dir }}/../../ssh/authorized_keys.template", "destination": "/tmp/authorized_keys.template" }
    , {"type": "file" , "source": "{{ template_dir }}/../../ssh/id_rsa.template", "destination": "/tmp/id_rsa.template" }
    , {"type": "shell" , "script": "{{ template_dir }}/scripts/base.sh" }
    , {"type": "shell" , "script": "{{ template_dir }}/scripts/virtualbox.sh" }
    , {"type": "shell" , "script": "{{ template_dir }}/scripts/cleanup.sh" }
    , {"type": "shell" , "script": "{{ template_dir }}/scripts/zerodisk.sh" }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ template_dir }}/../../packer_build/{{ isotime \"20060102\" }}/{{ user `output_name` }}-x64-{{ .Provider }}.box",
      "vagrantfile_template": "{{ template_dir }}/Vagrantfile.template"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
		"<enter><wait>", 
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " keyboard-configuration/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debian-installer=en_US<wait>",
        " debconf/frontend=noninteractive<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_hostname=ubuntu-1804<wait>",
        " netcfg/get_domain=vagrantup.com<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " net.ifnames=0",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 102400,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "{{ template_dir }}/http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_url": "{{ user `iso_url` }}",
      "ssh_username": "root",
      "ssh_password": "mapr",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'mapr'|sudo -S shutdown -P now",
      "hard_drive_interface": "ide",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": "/tmp/.vbox_version",
      "headless": true,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "8196" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "qemu",
      "accelerator": "kvm",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "headless": true,
      "http_directory": "{{ template_dir }}/http",
      "ssh_username": "root",
      "ssh_password": "mapr",
      "ssh_port": 22,
      "ssh_wait_timeout": "40m",
      "qemuargs": [
        ["-m", "2048"] 
      ],
      "boot_wait": "10s",
      "disk_cache" : "unsafe",
      "disk_size": 102400,
      "disk_interface": "ide",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
		"<enter><wait>", 
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debian-installer=en_US<wait>",
        " debconf/frontend=noninteractive<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_hostname=ubuntu-1804<wait>",
        " netcfg/get_domain=vagrantup.com<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " net.ifnames=0",
        " -- <wait>",
        "<enter><wait>"
      ],
      "shutdown_command": "echo 'mapr' |sudo -S shutdown -P now"
    }
  ]
}
