{
	"variables": {
		"iso_url": "http://10.2.14.49/repo/suse/15.1/iso/SLE-15-SP1-Installer-DVD-x86_64-GM-DVD1.iso"
		, "iso_checksum": "5787b180a60a8d52bc42ddb8c51884ca4263f5ed47dc10bb72229a49e8b07497"
		, "iso_checksum_type": "sha256"
		, "repo_url": "http://repo.mapr/repo/suse/15.1/repo/InstallerDVD1/"
		, "output_name": "suse-15-1"
	}
	, "builders": [
		{
			"type": "qemu"
			, "accelerator": "kvm"
			, "iso_url": "{{ user `iso_url` }}"
			, "iso_checksum": "{{ user `iso_checksum` }}"
			, "iso_checksum_type": "{{ user `iso_checksum_type` }}"
			, "headless": true
			, "http_directory": "{{ template_dir }}/http"
			, "ssh_username": "root"
			, "ssh_password": "mapr"
			, "ssh_wait_timeout": "20m"
			, "qemuargs": [
				["-m", "1024"]
			]
			, "boot_wait": "10s"
			, "disk_interface": "ide"
			, "disk_size": 102400
			, "boot_command": [
				"<esc><return><wait>"
				, "linux"
				, " netdevice=eth0 netsetup=dhcp"
				, " autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoyast.xml"
				, " install={{ user `repo_url` }} insecure=1"
				, " textmode=1"
				, "<return>"
			]
			, "shutdown_command": "shutdown -h now"
		}
		, {
			"type": "virtualbox-iso"
			, "iso_url": "{{ user `iso_url` }}"
			, "iso_checksum": "{{ user `iso_checksum` }}"
			, "iso_checksum_type": "{{ user `iso_checksum_type` }}"
			, "headless": true
			, "http_directory": "{{ template_dir }}/http"
			, "ssh_username": "root"
			, "ssh_password": "mapr"
			, "ssh_wait_timeout": "20m"
			, "guest_os_type": "OpenSUSE_64"
			, "guest_additions_path": "/tmp/VBoxGuestAdditions_{{.Version}}.iso"
			, "virtualbox_version_file": "/tmp/.vbox_version"
			, "vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "2048"]
			]
			, "boot_wait": "10s"
			, "hard_drive_interface": "ide"
			, "disk_size": 102400
			, "boot_command": [
				"<esc><return><wait>"
				, "linux"
				, " netdevice=eth0 netsetup=dhcp"
				, " autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoyast.xml"
				, " install={{ user `repo_url` }} insecure=1"
				, " textmode=1"
				, "<return>"
			]
			, "shutdown_command": "shutdown -h now"
		}
	]
	, "provisioners": [
		{"type": "file" , "source": "{{ template_dir }}/../../ssh/authorized_keys.template", "destination": "/tmp/authorized_keys.template" }
		, {"type": "file" , "source": "{{ template_dir }}/../../ssh/id_rsa.template", "destination": "/tmp/id_rsa.template" }
		, {"type": "shell" , "script": "{{ template_dir }}/scripts/postconf.sh" }
		, {"type": "shell" , "script": "{{ template_dir }}/scripts/virtualbox.sh" }
		, {"type": "shell" , "script": "{{ template_dir }}/scripts/zerodisk.sh" }
	]
	, "post-processors": [
		{
			"type": "vagrant"
			, "output": "{{ template_dir }}/../../packer_build/{{ isotime \"20060102\" }}/{{ user `output_name` }}-x64-{{ .Provider }}.box"
			, "vagrantfile_template": "{{ template_dir }}/Vagrantfile.template"
		}
	]
}
